<!DOCTYPE html>
<html>
<head>
	<%- partial('partials/header/header-start.ejs', {
			title: process.env.APP_NAME + (user ? ' - ' + user.name.full : '')
		}) %>
	<%- partial('partials/resources.ejs', {
			stylesheets: [
				'/public/lib/bootstrap/css/bootstrap.min.css',
				'/public/gf-style.css',
				'/public/user-home.css'
			],
			scripts: []
		}) %>
	<%- partial('partials/header/header-end.ejs') %>
</head>
<body>
	<%- partial('partials/topbar.ejs') %>
	<%- partial('partials/shadowbox.ejs') %>

	<div class="container container-fluid">
		<div class="row-fluid">
			<div class="user-picture-outer pull-left">
				<img class="user-picture" src="/api/users/picture/me?type=normal">
			</div>
			<h1 class="nowrap"><%= user.name.full %></h1>
			<p class="blurb"><%= user.blurb %></p>
		</div>

		<div class="row-fluid">
			<h3>Notifications</h3>
		</div>

		<div class="row-fluid">
			<h3>Groups</h3>
		</div>

		<div class="row-fluid">
			<h3>Friends</h3>
		</div>
	</div>
</body>
</html>
